            <!-- SIMILAR EXAMPLE -->
            <div class="example-card similar">
                <div class="similarity-badge">Cosine Similarity ‚âà 0.95</div>
                <div class="example-title">üéØ SIMILAR</div>
                
                <div class="domain-tabs">
                    <div class="domain-tab active" onclick="switchTab(this, 'similar', 'text')">üìù Text Analysis</div>
